{
  "name": "truck-app",
  "version": "1.0.0",
  "description": "Create - Update - Fetch all available trucks.",
  "main": "server.js",
  "engines": {
    "node": "11.3.0",
    "npm": "6.5.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts --exec babel-node --extensions '.ts' src/server.ts",
    "build": "babel src -d dist --extensions '.ts' --source-maps inline"
  },
  "author": "Vasilis Koukoutis",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "knex": "^0.16.3",
    "pg": "^7.7.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-typescript": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "nodemon": "^1.18.7"
  },
  "babel": {
    "presets": [
      "@babel/typescript",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-typescript",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
